<script>
	$( document ).ready(function() {
		$('#alerta').hide()
		$('#exito').hide()
	});
	function verificarpassword(){
		var password = $('#password').val()
		if($('#verifypassword').val() != password){
			$('#alerta').show()
			$('#exito').hide()
		}
		else{
			$('#alerta').hide()
			$('#exito').show()
		}
	}
</script>
